@using Microsoft.AspNetCore.Identity
@using MoonGameRev.Data.Models
@using MoonGameRev.Services.Data.Interfaces
@using MoonGameRev.Web.Infrastructure.Extensions
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@inject IJournalistService JournalistService
@{
    bool isUserJournalist = await JournalistService.JournalistExistsByUserIdAsync(this.User.GetId());
}


<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @User.Identity?.Name!</a>
    </li>
    @if (!isUserJournalist)
    {
      <li class="nav-item">
          <a class="nav-link text-dark" asp-area="" asp-controller="Journalist" asp-action="Become">Become Journalist</a>
      </li>
     }
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="/User/Login">Login</a>
    </li>
}
</ul>
