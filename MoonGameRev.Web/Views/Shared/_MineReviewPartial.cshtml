@model MoonGameRev.Web.ViewModels.Review.ReviewAllViewModel

<div class="col-md-4 mb-4">
    <div class="card h-100">
        <a href="@Url.Action("Details", "Game", new { id = Model.GameId })">
            <img src="@Model.CoverImage" class="card-img-top" alt="@Model.GameName">
        </a>
        <div class="card-body">
            <h5 class="card-title">@Model.GameName</h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">User: @Model.UserName</li>
                <li class="list-group-item">Rating: @Model.Rating/10</li>
                <li class="list-group-item">Pros:
                    <ul>
                        @foreach (var pro in Model.Pros.Split(';'))
                        {
                                <li>@pro</li>
                        }
                    </ul>
                </li>
                <li class="list-group-item">Cons:
                    <ul>
                        @foreach (var con in Model.Cons.Split(';'))
                        {
                                <li>@con</li>
                        }
                    </ul>
                </li>
                <li class="list-group-item">Comment: @Model.Comment</li>
                <li class="list-group-item">Date: @Model.Date</li>
            </ul>
                <a class="btn btn-warning" asp-controller="Review" asp-action="Edit"
                           asp-route-id="@Model.Id">Edit</a>
                <a class="ml-2 btn btn-danger" asp-controller="Review" asp-action="Delete"
                           asp-route-id="@Model.Id">Delete</a>
        </div>
    </div>
</div>
