@model ReviewPreDeleteDetailsViewModel

@{
    ViewBag.Title = "Delete this review";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form method="post" asp-action="Delete">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" style="width: 50px;" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Pros" class="control-label"></label>
                <textarea asp-for="Pros" class="form-control" rows="6" disabled="disabled"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Cons" class="control-label"></label>
                <textarea asp-for="Cons" class="form-control" rows="6" disabled="disabled"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control" rows="6" disabled="disabled"></textarea>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>
